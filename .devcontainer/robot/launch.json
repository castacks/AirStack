{
    "version": "2.0.0", 
    "configurations": [
        {
            "name": "ROS2: Launch Robot Bringup",
            "type": "ros2",
            "request": "launch",
            "target": "${workspaceFolder}/robot/ros_ws/src/robot_bringup/launch/robot.launch.xml"
        },
        {
            "name": "ROS2: Launch Simple Global Navigator",
            "type": "ros2",
            "request": "launch",
            "target": "${workspaceFolder}/robot/ros_ws/src/autonomy/4_global/b_planners/simple_global_navigator/launch/simple_global_navigator.launch.py",
            "arguments": ["cost_map_topic:=/robot_1/vdb_mapping/vdb_map_pointcloud", "enable_debug_visualization:=true"]
        },
        {
            "name": "ROS2: Attach",
            "type": "ros2",
            "request": "attach"
        }
    ]
}