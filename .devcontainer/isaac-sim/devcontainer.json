// .devcontainer/devcontainer.json
{
    "name": "Isaac Sim Container",
    "service": "isaac-sim",
    "runServices": [
        "isaac-sim"
    ],
    "dockerComposeFile": [
        "../../docker-compose.yaml"
    ],
    "workspaceFolder": "/root/AirStack/.devcontainer/isaac-sim/isaac-container.code-workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", // Install the Python extension
                "ms-python.black-formatter"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/isaac-sim/python.sh" // Or your specific path
            }
        }
    },
    "postStartCommand": "tmux kill-session -t isaac"
}