<!-- SENSORS -->
<launch>
    <!-- =========== ARGUMENTS ========== -->
    <arg name="sim" default="true" />
    <set_parameter name="use_sim_time" value="true" if="$(var sim)" />

    <!-- =========== LAUNCH ============= -->
    <push-ros-namespace namespace="sensors" />

    <!-- ~~~~~~~~~~~ INCLUDES ~~~~~~~~~ -->

    <!-- Camera Parameter Server -->
    <include file="$(find-pkg-share camera_param_server)/launch/camera_param_server.launch.xml" />

    <!-- ZED-X Camera -->
    <!-- Only launch if on real robot and sim is FALSE. This is because when sim=true, we run this on the Isaac Container -->
    <include file="$(find-pkg-share zed_wrapper)/launch/zed_camera.launch.py" unless="$(var sim)" >
        <arg name="camera_model" value="zedx" />
        <arg name="sim_mode" value="false" />
        <arg name="use_sim_time" value="false" />
    </include>

    <!-- ~~~~~~~~~~~ NODES ~~~~~~~~~ -->
    <!-- None -->

</launch>