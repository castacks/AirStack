<launch>
    <!-- ====== Environment TFs ====== -->
    <node
        pkg="tf2_ros"
        exec="static_transform_publisher"
        name="static_transform_publisher"
        args="0 0 0 0 0 0 mavros_enu map" />

    <!-- Some packages like MACVO publishe in map_ned. Create a transform from map_enu to map_ned -->
    <node
        pkg="tf2_ros"
        exec="static_transform_publisher"
        name="static_transform_publisher"
        args="0 0 0 1.5708 0 3.14159 map map_ned" />

    <!-- This is a sim hack. Our SITL for some dumb reason starts out rotated at 97 degrees. MACVO doesn't know that, therefore we need this transform -->
    <node
        pkg="tf2_ros"
        exec="static_transform_publisher"
        name="static_transform_publisher"
        args="0 0 0.11 1.69297 0 0 map robot_origin" />
    <node
        pkg="tf2_ros"
        exec="static_transform_publisher"
        name="static_transform_publisher"
        args="0 0 -0.11 0 0 3.14159 robot_origin robot_origin_ned" />
    <!-- Transform MACVO's NED back to ENU -->
    <node
        pkg="tf2_ros"
        exec="static_transform_publisher"
        name="static_transform_publisher"
        args="0 0 0 0 0 -3.14159 base_link_ned base_link" />

    <!-- ====== Robot TFs ========= -->
    <!-- currently none -->
</launch>